mixin picture(data = {})
    -
        const width = data.width || 100
        const height = data.height || 100
        const imgClass = data.imgClass || false
        const name = data.name || 'content/pic-placeholder'
        const ext = data.ext || 'png'
        const alt = data.alt || false
        const isSVG = data.ext === 'svg'

    if isSVG
        picture&attributes(attributes)
            img(
                width=width
                height=height
                class=imgClass
                src=`./img/${name}.${ext}`
                alt=alt
            )

    else
        picture&attributes(attributes)
            source(type="image/webp" srcset=`./img/${name}.webp, ./img/${name}@2x.webp 2x`)
            img(
                class=imgClass
                src=`./img/${name}.${ext}`
                srcset=`./img/${name}@2x.${ext}`
                width=width
                height=height
                alt=alt
            )
