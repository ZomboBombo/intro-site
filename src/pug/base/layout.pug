doctype html
include ./components

block variables
  -
    var hasHeader = true
    var hasFooter = true

html(lang="en")
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")

    +metainfo()
    +favicons()

    // Fonts preloading
    link(rel="preload" href="./fonts/inconsolata/Inconsolata-Regular.woff2" as="font" crossorigin="anonymous")
    link(rel="stylesheet" href="/src/sass/styles.scss")

  body
    +sprite()

    .site-container(data-sidebar="parent")
      +site-header()
      +site-sidebar()

      .site-container__content
        main.site-main
          block main

        +site-footer()

    script(src="/src/js/main.ts" type="module")
